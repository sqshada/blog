{
  "name": "blog",
  "version": "1.0.0",
  "description": "vuepress blog",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --bail --coverage",
    "prebuild": "npm run lint && npm run prettier && npm run test",
    "build": "npm run lint && rimraf dist types && gulp",
    "lint": "eslint src --max-warnings 0",
    "prettier": "prettier src  --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqshada/blog.git"
  },
  "files": [
    "dist",
    "types"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sqshada/blog/issues"
  },
  "homepage": "https://github.com/sqshada/blog#readme",
  "dependencies": {
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lint-staged": "^10.2.13",
    "merge2": "^1.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "prettier": "^2.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run prettier"
    ]
  }
}